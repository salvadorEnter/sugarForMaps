<div class="row-fluid" style="display:flex; flex-direction: row; align-items:flex-start;">
	<div id="map" class="span6"></div>
	<div class="list-view span6 table">
		<table class="datos" id="registros">
			<thead >
				<tr>
	                <th >Cuenta</th>
	             	<th >RÃ©gimen Fiscal</th>
	                <th >Tipo</th>
	                <th >Telefono</th>
	                <th >Latitud</th>
	                <th >Longitud</th>
	            </tr>
	        </thead>
	        <tbody id="Cuentas">
	          {{#each cuentas.records}}
	            <tr>
	                <td class="nombre" >
	                	<a class="linkcuenta" href="#Accounts/{{id}}" target="_blank" data-id="{{id}}">{{name}}</a>
	                </td>
	                <td  class="regimen">
	                	{{tipodepersona_c}}
	                </td>
	                <td  class="tipo">
	                  {{tipo_registro_c}}<!--Como lo regresa el JSON-->
	                </td>
	                <td  class="telefono">
	            		{{phone_office}}
	                </td>
	                <td  class="Latitud">
	                	{{latitud_c}}
	                </td>
	                <td  class="Latitud">
	                	{{longitud_c}}
	                </td>
	            </tr>
	          {{/each}}
	        </tbody>
		</table>
		<div class="col-md-12 text-center">
			<ul class="pagination pagination-lg pager" id="developer_page"></ul>
		</div>
	</div>
</div>