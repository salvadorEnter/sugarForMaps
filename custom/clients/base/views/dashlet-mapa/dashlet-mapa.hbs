<style>
	#map{
		height: 410px;
		width: 710px;
	}
	#registros{ 
		width:auto; 
	}
	.linkcuenta:hover {
  	background-color: yellow;
	}
 	table th a { display: block; }
  	
</style>
<div class="row-fluid" style="display:flex; flex-direction: row; align-items:flex-start;" id="inputs">
	<div class="span3">
		<input type="text" name="nombre" id="nombre" placeholder="Nombre" style="width: 95%;margin: 4px;display: inline-block;">
	</div>
	<div class="span3">
		<select class="tipo select2" placeholder="Select" style="width: 100%;margin: 4px;display: inline-block;">
			{{#each tipoRegistro}}
				<option value="{{@key}}" {{ifSelected @key ../tipo}}>{{this}}</option>
			{{/each}}
		</select>
	</div>
	<div class="span3">
		<input type="text" name="telefono" id="telefono" placeholder="Telefono" style="width: 95%;margin: 4px;display: inline-block;">
	</div>
	<div class="span3">
		<button class="btn btn-primary" id="buscarCuentas" class="buscarCuentas" style="width: 50%;margin: 4px;display: inline-block;">Buscar</button>
	</div>
	<br>
</div>
